[Unit]
Description=Atlassian Confluence
After=network.target

[Service]
Type=forking
PIDFile=<%= "#{@pid_directory}/#{@service_name}.pid" %>
User=<%= @service_name %>
Environment="CATALINA_PID=<%= "#{@pid_directory}/#{@service_name}.pid" %>"
ExecStart=<%= @current_dir %>/bin/start-confluence.sh
ExecStop=<%= @current_dir %>/bin/stop-confluence.sh

[Install]
WantedBy=multi-user.target
